{
  "name": "@transferwise/components",
  "version": "0.2.0",
  "description": "TransferWise styleguide components in react",
  "license": "MIT",
  "main": "./build/main.js",
  "repository": {
    "fullname": "transferwise/components",
    "type": "git",
    "url": "git+https://github.com/transferwise/components.git"
  },
  "devDependencies": {
    "autoprefixer": "6.7.2",
    "babel-core": "6.22.1",
    "babel-eslint": "7.1.1",
    "babel-jest": "18.0.0",
    "babel-loader": "6.2.10",
    "babel-preset-react-app": "^2.2.0",
    "babel-runtime": "^6.20.0",
    "bootstrap": "github:transferwise/bootstrap",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chalk": "1.1.3",
    "connect-history-api-fallback": "1.3.0",
    "cross-spawn": "4.0.2",
    "css-loader": "0.26.1",
    "detect-port": "1.1.0",
    "dotenv": "2.0.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "1.6.0",
    "eslint-plugin-flowtype": "2.21.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.10.0",
    "fs-extra": "0.30.0",
    "gh-pages": "^0.12.0",
    "html-webpack-plugin": "2.24.0",
    "http-proxy-middleware": "0.17.3",
    "jest": "18.1.0",
    "json-loader": "0.5.4",
    "object-assign": "4.1.1",
    "postcss-loader": "1.2.2",
    "react": "^15.5.4",
    "react-dev-utils": "^0.5.2",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "release-to-github-with-changelog": "^0.7.0",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.14.0",
    "webpack-dev-server": "1.16.2",
    "webpack-manifest-plugin": "1.1.0"
  },
  "dependencies": {
    "currency-flags": "git+https://github.com/transferwise/currency-flags.git",
    "prop-types": "^15.5.8"
  },
  "peerDependencies": {
    "bootstrap": "github:transferwise/bootstrap",
    "react": "^15.5.4"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom && node_modules/.bin/release-to-github-with-changelog-pre-release-checks",
    "pretest": "npm run lint",
    "lint": "node_modules/.bin/eslint src && node_modules/.bin/eslint docs",
    "deploy": "node_modules/.bin/release-to-github-with-changelog && npm publish",
    "predeploy": "npm run build",
    "build:docs": "node scripts/build.js docs",
    "deploy:docs": "node_modules/.bin/gh-pages -d docs-build",
    "predeploy:docs": "npm run build:docs"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "react/jsx-filename-extension": 0
    },
    "env": {
      "browser": true,
      "jest": true
    }
  },
  "homepage": "https://transferwise.github.io/components/",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
