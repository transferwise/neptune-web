{
  "compilerOptions": {
    // "rootDir": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    // enable this to start scan JS files (according to regex at `include` and `exclude` props)
    // consider to delete this prop once we don't have JS
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "explainFiles": false
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "test",
    "public",
    "**/*.story.*",
    "**/*.spec.*",
    "**/index.*"
  ]
}
