{
    "extends": "@transferwise",
    "rules": {
      "fp/no-mutation": 0,
      // https://github.com/benmosher/eslint-plugin-import/issues/1615#issuecomment-577500405
      "import/extensions": ["error", "ignorePackages", {
        "js": "never",
        "ts": "never",
        "tsx": "never"
      }]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".ts", ".tsx", ".json"]
        }
      }
    }
  }
  